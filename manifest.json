{	"name"					: "Quick Javascript Switcher"
, 	"version"				: "1.0.8"
,	"minimum_chrome_version": "16.0"
,	"manifest_version"		: 2
,	"homepage_url"			: "https://github.com/maximelebreton/quick-javascript-switcher"
,	"update_url"			: "https://raw.github.com/maximelebreton/quick-javascript-switcher/master/updates.xml"
,	"description"			: "Quick way to enable/disable Javascript"
,	"author"				: "Maxime Le Breton [fr]"

,	"icons"					:
		{ "16"				: "icon.png"
		, "48"				: "icon-48.png"
		, "128"				: "icon-128.png"
		}

,	"permissions"			:
		[ "tabs"
		, "contentSettings"
		, "contextMenus"
		]

,	"browser_action"		:
		{ "default_icon"	: "icon.png"
		}

,	"incognito"				: "split"
,	"background"			: 
		{ "page": "background.html"
		}
,	"options_page"			: "options.html"
}

